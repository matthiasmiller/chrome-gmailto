{
    "name": "Mailto Anywhere",
    "description": "Support mailto links that launch in Gmail (default) or other locations.",
    "version": "0.0.0.3",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "core.js",
                "content_script.js"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "64": "icon64.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "options.html"
    },
    "permissions": [
        "storage"
    ]
}